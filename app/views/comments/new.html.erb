<div class='header'>
  <h1>Blog App</h1>
  <div class='button-cont'>
	<%= button_to("Home", root_path, method: :get, class: 'log-out') %>
	<%= button_to("Log Out", destroy_user_session_path, method: :delete, class: 'log-out') %>
  </div>
</div>

<%= form_with model: [@user, @post, @comment], class:'form', url: user_post_comments_path do |f| %>

    <%= f.label :text, required: true, class: 'comment_label' %>
    <%= f.text_field :text, autofocus: true, required: true, class:'form_text' %>


    <%= f.submit "Comment", class: 'comment_btn' %>

<% end %>