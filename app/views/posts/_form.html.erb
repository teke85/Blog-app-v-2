<main class="add-post-page">
   <div class="row">
   <h3> Add New Post </h3>
    <%= form_with model: [@current_user, @current_user.posts.build] do |form| %>
        <div class="post_form">

        <div>
        <%= form.label :title  %>
        <%= form.text_field :title, class:'post_title'%>
        <% form.object.errors.full_messages_for(:title).each do |message|%>
        <div><%= message %></div>
        <%end%>
        </div>

        <div>
        <%= form.label :text%>
            <%= form.text_area :text, class:'post_text'%>
            <% form.object.errors.full_messages_for(:text).each do |message|%>
            <div><%= message %></div>
            <%end%>
        </div>

        <div class="create-new-btn-wrapper">
            <%= form.submit "Create Post", class:"post_button"%>
        </div>
        </div>
<%end%>
   </div>
</main>