<%=link_to user_post_path(@user, post) do %>
  <div class="post">
    <h3><%= post.title %></h3>
    <p><%= post.text %></p>
    <p class='post-total'>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %> </p>
  </div>
<% end %>

<% if can? :destroy, post %>
  <%= form_for [@user, post], url: user_post_path(@user, post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } do |f| %>
    <%= f.submit "Delete Post", :class => 'delete_btn' %>
  <% end %>
<% end %>
