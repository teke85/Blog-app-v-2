<div class='user-content'>
  <% if user.photo.present? %>
    <%= image_tag user.photo, alt: "#{user.name} profile image", class: 'profile' %>
  <% else %>
    <!-- Add a placeholder image or any default image -->
    <%= image_tag '312-3120300_default-profile-hd-png-download.png', alt: 'Default profile image', class: 'profile' %>
  <% end %>
  <div class='user-content2'>
    <%= link_to user, class: 'user-content-details' do %>
    <div class='user-info'>
    <h2><%= user.name %></h2>
    <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %>
    </div>
    <p class='user-post-total'>Number of posts: <%=user.posts_counter%> </p>
    <%end%>
  </div>
 </div>
