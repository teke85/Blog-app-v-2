<main>
    <div class="single-user container">
        <section class="section-container">
            <img src=<%= @user.photo %> alt="User Photo" class="user-photo">
            <div class="right-col">
                <h2 class="user-name"><%= @user.name%></h2>
                <h4 class="post-count">Number of posts: <%= @user.posts_counter %> </h4>
            </div>
        </section>
        <hr>
        <section class="bio">
            <h3>Bio</h3>
            <p><%= @user.bio %></p>
        <section>
        <hr>
        <section class="posts container">
            <h3>Recent Posts</h3>
            <% @user.most_recent_posts.each do |post| %>
            <a href="<%=@user.id%>/posts/<%=post.id%>" class="post-link">
                <div class="post">
                    <div class="post-content">
                        <h4><%= post.title %></h4>
                        <p><%= truncate(post.text, length: 200) %></p>
                    </div>
                    <footer class="post-footer">
                    <span class="comment-count">Comments: <%= post.comments_counter %></span>, <span class="like-count">Likes: <%= post.likes_counter %></span>
                    </footer>
                    </div>
                </a>
                
                
            <% end %>
            
            <a href="<%=@user.id%>/posts/" class="button">See all posts</a>
        </section>
    </div>

</main>
